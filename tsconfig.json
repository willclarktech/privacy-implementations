{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"declarationDir": "types",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"newLine": "LF",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "build",
		"pretty": true,
		"removeComments": true,
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "es2020"
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.spec.ts"]
}
